<%=link_to h(server.hostname), server %>
<% if server.comment && !server.comment.empty? %>
  <img src="/images/stock_notes.png" alt="notes" title="<%=h server.comment%>">
<% end %>
<% if !server.enabled? %>
  <img src="/images/disable.png" alt="disabled" height="16" width="16">
<% end %>
<% if server.enabled? && server.remove_only? %>
  <img src="/images/dispose_of_it.png" alt="removing" height="16" width="16">
<% end %>
